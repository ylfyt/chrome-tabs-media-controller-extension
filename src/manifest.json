{
  "manifest_version": 3,
  "name": "Tabs Audio Controller",
  "version": "3.0.0",
  "commands": {
    "play-toggle": {
      "suggested_key": "Alt+C",
      "description": "Play Pause Toggle"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Tabs",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://*/",
    "https://*/"
  ]
}
